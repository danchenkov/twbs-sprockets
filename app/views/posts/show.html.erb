<p style="color: green"><%= notice %></p>

<div class="container">
  <%= render @post %>
  <div>
    <% if current_user %><%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-secondary"  %><% end %>
    <%= link_to "Back to posts", posts_path, class: "btn btn-secondary"  %>
    <% if current_user %><%= link_to "Destroy this post", @post, method: :delete, class: "btn btn-danger"  %><% end %>
  </div>
</div>
