{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:json/recommended-with-comments"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "json"
    ],
    "rules": {
        "json/*": [
            "error",
            "allowComments"
        ],
        "array-element-newline": [
            "error",
            "never"
            // { "multiline": true }
        ],
        "indent": [
            "error",
            2
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}